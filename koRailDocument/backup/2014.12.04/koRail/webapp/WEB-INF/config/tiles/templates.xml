<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC 
       "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN" 
       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>
	<!-- No template -->
	<definition name=".ntp" template="/WEB-INF/view/jsp/layout/ntForm.jsp">
		<put-attribute name="content" value="" />  	
	</definition>

	<!-- No login -->
	<definition name=".nlg" template="/WEB-INF/view/jsp/layout/nlForm.jsp">
		<put-attribute name="head" value="/WEB-INF/view/jsp/layout/headForm.jsp" />
		<put-attribute name="header" value="/WEB-INF/view/jsp/layout/headerForm.jsp" />
		<put-attribute name="content" value="" />
		<put-attribute name="footer" value="/WEB-INF/view/jsp/layout/footerForm.jsp" />	
	</definition>
	
	<!-- Set template -->
	<definition name=".stp" extends=".nlg" template="/WEB-INF/view/jsp/layout/templateForm.jsp">
		<put-attribute name="lmb" value="/WEB-INF/view/jsp/layout/lmbForm.jsp" />
	</definition>
</tiles-definitions>